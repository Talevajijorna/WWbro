import telebot
import random
from telebot.types import InlineKeyboardMarkup, InlineKeyboardButton

bot = telebot.TeleBot

@bot.message_handler(commands=['start', 'help'])

def send_welcome(message):
    bot.send_message(message.chat.id, "ĞšĞ½Ğ¾Ğ¿Ğ¾Ñ‡ĞºÑƒ Ğ½Ğ°Ğ¶Ğ¸Ğ¼Ğ°Ğ¹", reply_markup=gen_markup())
    

