def gen_markup():
    markup = InlineKeyboardMarkup()
    markup.row_width = 5
    markup.add(
        InlineKeyboardButton("â¤", callback_data="1"),
        InlineKeyboardButton("ğŸ™Š", callback_data="2"),
        InlineKeyboardButton("ğŸ¤ ", callback_data="3"),
        InlineKeyboardButton("ğŸ˜¥", callback_data="4"),
        InlineKeyboardButton("ğŸ¤¡", callback_data="5"))
    return markup

@bot.callback_query_handler(func=lambda call: True)
def callback_query(call):
    print(call)
    r = random.randint(1, 4)
    if call.data == str(r):
        bot.edit_message_text('Ğ¢Ñ‹ Ñ Ñ‡Ğ¸Ñ‚Ğ°Ğ¼Ğ¸ Ğ¸Ğ³Ñ€Ğ°ĞµÑˆÑŒ! ĞÑ‚ĞºÑƒĞ´Ğ° Ñ‚Ğ¾Ğ³Ğ´Ğ° ÑƒĞ·Ğ½Ğ°Ğ»?', call.message.chat.id, call.message.id)
    else:
        bot.edit_message_text('Ğ¥Ğ°Ñ…Ğ°Ñ…Ğ°Ñ… Ğ½Ğµ Ğ¿Ğ¾Ğ²ĞµĞ·Ğ»Ğ¾! ğŸ˜‚ğŸ˜‚ğŸ˜‚, Ğ˜Ğ´Ğ¸ ÑƒĞ´Ğ°Ñ‡Ñƒ Ğ¿Ğ¾ĞºÑƒĞ¿Ğ°Ğ¹! ', call.message.chat.id, call.message.id)
    
        
@bot.message_handler(content_types=['text'])
def func(message):
    if message.text == 'hello':
        bot.send_message(message.chat.id, 'hi')
    else:
        bot.send_message(message.chat.id, message.text)
bot.infinity_polling()




